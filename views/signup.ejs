<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>  
        <title>Signup</title>
        <style>
                .fa {
            padding: 8px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            }

            .fa:hover {
            opacity: 0.7;
            }
            
            /* Facebook */
            .fa-facebook {
            background: white;
            color: #232a34;
            }

            .fa-user-plus {
                background: white;
                color: #232a34;
            }       
        </style>
        <%
            if (err == "username already exists")
            {
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("Username already exists");
                </script>
        <%
            }
            else if (err == "email already exists")
            {            
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("Email already exists");
                </script>
        <%
            }
            else if (err == "password length is incorrect")
            {
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("Password length has to be between 6-50 long");
                </script>
        <%
            }
            else if (err == "password specification not matched")
            {
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("Password has to contain at least one capital letter, one lowercase and one number");
                </script>
        <%
            }
            else if (err == "email format is incorrect")
            {
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("Email format is incorrect");
                </script>
        <%
            }
            else if (err == "missing information")
            {
        %>
                <script>
                    window.location.replace("http://localhost:3002/signup");
                    alert("There seems to be missing information.");
                </script>
        <%
            }
            else if (succ == "success on signup")
            {
        %>
            <script>
                window.location.replace("http://localhost:3002/signup");
                alert("You have successfully signed up. Please navigate to the login page in order to login.");
            </script>        
        <%
            }
        %>
    </head>
    <body style="background-image: url('https://i.pinimg.com/originals/08/78/66/087866fe600793994f5ced6ac36de606.gif'); background-repeat: no-repeat; background-size: auto; background-color: black;">
        <div class="container-fluid">
            <header style="width: 50%; background-color: #232a34; width: 1500px; margin-left: -50px;">
                <div>
                    <div class="font-weight-bold" style="font-size: 35px; color: white; font-family: monospace; margin-left: 50px;">
                        <p>HyperTube</p>
                    </div>
                </div>
            </header>
            <div class="row">
                <form action="/signup" name="signup" method="post" style="margin-left: 6%; margin: auto;">
                    <fieldset style="border: 1px solid #232a34; border-radius: 10px; width: 305px; background-color: #232a34;">
                        <legend style="width: auto; color: white; position: relative; top: 35px; left: 15px;">Signup</legend>
                            <div class="col-sm-6" style="margin-top: 50px;">
                                <input id="firstname" class="form-control" type="text" name="firstname" placeholder="Firstname" style="width: 270px; height: 30px;" required>
                                <br />
                                <input id="lastname" class="form-control" type="text" name="lastname" placeholder="Lastname" style="width: 270px; height: 30px;" required>
                                <br />
                                <input id="username" class="form-control" type="text" name="username" placeholder="Username" style="width: 270px; height: 30px;" required>
                                <br />
                                <input id="email" class="form-control" type="email" name="email" placeholder="Email" style="width: 270px; height: 30px;" required>
                                <br />
                                <input id="password" class="form-control" type="password" name="password" placeholder="Password" style="width: 270px; height: 30px;" required>
                                <br />
                                <br />
                                <input type="submit" class="btn btn-dark" style="width: 270px; background-color: white; color: #232a34;" name="submit" value="submit">
                                <p></p>
                                <p style="margin-left: 125px; color: white" class="font-weight-light">OR</p>
                                <a  class="btn btn-dark" style="margin-top: -10px; margin-bottom: 44px; width: 270px; background-color: white; color: #232a34;" href="/login">Login</a>
                                <br />
                            </div>
                            <div style="margin-left: 36%;">
                                <a href="/signup/auth/facebook" class="fa fa-facebook"></a>
                                <a href="/signup/auth/42" class="fa fa-user-plus"></a>
                            </div>
                            <br />
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <footer>Â© 2020 matcha project</footer>
    </body>
</html>